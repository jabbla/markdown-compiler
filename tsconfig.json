{
    "compilerOptions": {
        "module": "ES6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "ES5",
        "outDir": "./dist",
        "types": ["node"]
    },
    "include": [
        "**/*.ts", "src/lib/**/*.js",
    ],
    "exclude": [
        "node_modules",
    ]
}